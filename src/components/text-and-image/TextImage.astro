---

import {Image} from 'astro:assets';
interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  imageUrl?: ImageMetadata;
  imageAlt?: string;
  buttonText?: string;
  buttonUrl?: string;
  reverse?: boolean;
  stats?: Array<{
    number: string;
    label: string;
  }>;
  features?: Array<string>;
}

const {title, subtitle, description, imageUrl, imageAlt, buttonText, buttonUrl, reverse, stats, features} = Astro.props
---

<section class="py-5 sm:py-16 lg:py-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center ${reverse ? 'lg:grid-flow-row-dense' : ''}`}>
      
      <!-- Caja de Texto Mejorada -->
      <div class={`space-y-8 ${reverse ? 'lg:col-start-2' : ''}`}>
        
        <!-- Header Section -->
        <div class="space-y-6">
          <!-- Subtítulo con badge -->
          {subtitle && (
            <div class="inline-flex items-center">
              <span class="inline-flex items-center px-4 py-2 rounded-full text-xs font-semibold bg-gradient-to-r from-red-500 to-red-600 text-white shadow-lg">
                <svg class="w-3 h-3 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                {subtitle}
              </span>
            </div>
          )}
          
          <!-- Título principal con gradiente -->
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 bg-clip-text text-transparent leading-tight">
            {title}
          </h2>
          
          <!-- Descripción mejorada -->
          <p class="text-xl text-gray-600 leading-relaxed font-light max-w-xl">
            {description}
          </p>
        </div>

        <!-- Stats Section (si se proporcionan) -->
        {stats && stats.length > 0 && (
          <div class="grid grid-cols-2 md:grid-cols-3 gap-6 py-6 border-y border-gray-200">
            {stats.map((stat) => (
              <div class="text-center">
                <div class="text-3xl md:text-4xl font-bold text-red-600 mb-1">
                  {stat.number}
                </div>
                <div class="text-sm font-medium text-gray-600 uppercase tracking-wide">
                  {stat.label}
                </div>
              </div>
            ))}
          </div>
        )}

        <!-- Features List (si se proporcionan) -->
        {features && features.length > 0 && (
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">¿Por qué elegir Auto Loa?</h3>
            <div class="grid grid-cols-1 gap-3">
              {features.map((feature) => (
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0 mt-1">
                    <div class="w-6 h-6 bg-gradient-to-r from-red-500 to-red-600 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <span class="text-gray-900 font-semibold text-base">{feature}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Testimonial o Value Proposition -->
        <div class="bg-gradient-to-r from-blue-50 to-indigo-100 rounded-2xl p-6 border border-blue-200">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9L10,17Z"/>
                </svg>
              </div>
            </div>
            <div>
              <h4 class="text-lg font-bold text-gray-900 mb-2">Experiencia de confianza</h4>
              <p class="text-gray-700 text-sm leading-relaxed">
                Con más de 10 años en el mercado automotriz, hemos ayudado a más de 5,000 familias a encontrar su auto ideal. Nuestro compromiso es ofrecerte transparencia, calidad y el mejor servicio al cliente.
              </p>
            </div>
          </div>
        </div>
        
        <!-- Botón de acción mejorado -->
        {buttonText && buttonUrl && (
          <div class="pt-6">
            <a 
              href={buttonUrl}
              class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-red-600 to-red-700 text-white font-semibold text-lg rounded-2xl hover:from-red-700 hover:to-red-800 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl focus:outline-none focus:ring-4 focus:ring-red-500/25 shadow-xl"
            >
              {buttonText}
              <svg class="ml-3 w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        )}
      </div>
      
      <!-- Caja de Imagen Mejorada -->
      <div class={`relative ${reverse ? 'lg:col-start-1' : ''}`}>
        <!-- Composición de imágenes estilo galería -->
        <div class="relative">
          {imageUrl && (
            <div class="relative overflow-hidden rounded-3xl shadow-2xl bg-gradient-to-br from-gray-100 to-gray-200">
              <Image
                src={imageUrl}
                alt={imageAlt || "Imagen"}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          )}

          <!-- Badge de experiencia (estilo de la imagen de referencia) -->
          <div class="absolute top-6 right-6 bg-black/90 backdrop-blur-sm rounded-2xl px-6 py-4 shadow-xl transform hover:scale-105 transition-all duration-300 animate-float-slow">
            <div class="text-white text-center">
              <div class="text-2xl font-bold mb-1">+10</div>
              <div class="text-xs uppercase tracking-wider opacity-90">años</div>
              <div class="text-xs font-medium">experiencia</div>
            </div>
          </div>

          <!-- Elementos decorativos flotantes -->
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-gradient-to-br from-red-400 to-red-600 rounded-full opacity-20 blur-xl -z-10 animate-pulse-slow"></div>
          <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-gradient-to-br from-blue-400 to-purple-600 rounded-full opacity-15 blur-2xl -z-10 animate-float-reverse"></div>
        </div>
        
        <!-- Tarjeta flotante con información adicional -->
        <div class="absolute -bottom-6 -right-6 bg-white rounded-2xl p-6 shadow-2xl border border-gray-100 max-w-xs hidden lg:block z-10 transform hover:scale-105 hover:-translate-y-2 transition-all duration-500 animate-float">
          <div class="space-y-3">
            <div class="flex items-center space-x-2">
              <div class="flex space-x-1">
                {Array.from({length: 5}).map((_, i) => (
                  <svg class="w-4 h-4 text-yellow-400 fill-current hover:scale-110 transition-transform duration-200" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
              <span class="text-sm font-semibold text-gray-700">4.9</span>
            </div>
            <p class="text-sm text-gray-600 font-medium">Satisfacción del cliente</p>
            <p class="text-xs text-gray-500">Basado en +1,200 reseñas verificadas</p>
          </div>
        </div>

        <!-- Tarjeta flotante con garantía (reposicionada) -->
        <div class="absolute top-1/2 -left-6 bg-gradient-to-r from-red-500 to-red-600 rounded-2xl p-4 shadow-xl max-w-44 hidden lg:block z-10 transform -translate-y-1/2 hover:scale-105 hover:-translate-x-2 transition-all duration-500 animate-float-reverse">
          <div class="text-white">
            <div class="flex items-center space-x-2 mb-2">
              <svg class="w-5 h-5 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm font-bold">Garantía</span>
            </div>
            <p class="text-xs font-medium">12 meses incluidos</p>
            <p class="text-xs opacity-90">En todos nuestros vehículos</p>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>

<style>
  /* Animaciones flotantes personalizadas */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes float-reverse {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(10px);
    }
  }

  @keyframes float-slow {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.4;
    }
  }

  /* Aplicar animaciones */
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-reverse {
    animation: float-reverse 8s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 10s ease-in-out infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  /* Mejorar efectos hover */
  .hover\:-translate-y-2:hover {
    transform: translateY(-8px) !important;
  }

  .hover\:-translate-x-2:hover {
    transform: translateX(-8px) translateY(-50%) !important;
  }
</style>